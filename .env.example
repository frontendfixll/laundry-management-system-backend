# Database
MONGODB_URI=mongodb://localhost:27017/laundry-management

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Server
PORT=5000
NODE_ENV=development

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Dynamic Subdomain Configuration
DNS_PROVIDER=vercel
MAIN_DOMAIN=laundrypro.com
DEPLOYMENT_PLATFORM=vercel

# Cloudflare Configuration (if using Cloudflare for custom server)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# AWS Route53 Configuration (if using Route53)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
ROUTE53_HOSTED_ZONE_ID=your-hosted-zone-id

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:3002
MARKETING_URL=http://localhost:3004
SUPERADMIN_URL=http://localhost:3003
SALES_URL=http://localhost:3005